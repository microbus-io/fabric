    "version": "0.2.0",
    "configurations": [

        {
            "name": "Main Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main",
            "cwd": "${workspaceFolder}/main"
        },
        {
            "name": "Codegen",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/codegen",
            "cwd": "${workspaceFolder}/examples/calculator",
            "env": {"CODEGEN": "-f -v"}
        }
    ]
}
